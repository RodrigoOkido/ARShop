<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arshop.controller">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:name=".activities.LoggedUser"
        android:allowBackup="true"
        android:icon="@mipmap/ic_arshop"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_arshop"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ActivityMySettingOption"></activity>
        <activity android:name=".activities.ActivityMySettings" />
        <activity android:name=".activities.ActivityMyFavorite" />
        <activity android:name=".activities.ActivityCreateUser" />
        <activity android:name=".activities.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ActivityProductPurchase" />
        <activity android:name=".activities.ActivityMyCart" />
        <activity android:name=".activities.ActivityProductCategory" />
        <activity android:name=".activities.ActivityProductList" />
        <activity android:name=".activities.ActivityModelDisplay" />
        <activity android:name=".activities.ActivityProductDetail" />
        <activity android:name=".activities.ActivityPaymentSection" />
        <activity android:name=".activities.ActivityFinishPurchaseSection" />

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>