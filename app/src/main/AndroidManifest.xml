<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arshop.controller">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:name=".LoggedUser"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityMySettings"></activity>
        <activity android:name=".ActivityMyFavorite" />
        <activity android:name=".ActivityCreateUser" />
        <activity android:name=".ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityProductPurchase" />
        <activity android:name=".ActivityMyCart" />
        <activity android:name=".ActivityProductCategory" />
        <activity android:name=".ActivityProductList" />
        <activity android:name=".ActivityModelDisplay" />
        <activity android:name=".ActivityProductDetail" />
        <activity android:name=".ActivityPaymentSection" />
        <activity android:name=".ActivityFinishPurchaseSection" />

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>